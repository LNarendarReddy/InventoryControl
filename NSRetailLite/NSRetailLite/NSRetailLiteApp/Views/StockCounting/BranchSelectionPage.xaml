<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NSRetailLiteApp.Views.StockCounting.BranchSelectionPage"
             Title="BranchSelectionPage">
    <CollectionView ItemsSource="{Binding Path=Branches}" SelectedItem="{Binding Path=SelectedBranch}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Text="{Binding Path=BranchName}" Grid.Row="0"/>
                    <Rectangle HeightRequest="2" BackgroundColor="PaleVioletRed" Grid.Row="1"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>